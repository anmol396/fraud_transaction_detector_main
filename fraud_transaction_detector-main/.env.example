########################################
# Django / Core
########################################
SECRET_KEY=replace-me
DJANGO_DEBUG=0

# Comma-separated hostnames (no scheme). For Render you can leave this empty
# and rely on RENDER_EXTERNAL_URL (below), which we auto-normalize.
ALLOWED_HOSTS=

# Must include scheme. Example: https://your-app.onrender.com
CSRF_TRUSTED_ORIGINS=

# Render provides this automatically; we also accept it locally for testing
RENDER_EXTERNAL_URL=

########################################
# Database (MongoDB)
########################################
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net
MONGO_DB=bfsi_db

########################################
# Email (Gmail example â€” use an App Password)
########################################
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=your_email@example.com
EMAIL_TIMEOUT=20

########################################
# Model / Risk policy
########################################
DECISION_THRESHOLD=0.5
AMOUNT_HIGH=1000
HIGH_RATIO=0.1
NIGHT_START=22
NIGHT_END=5
VELOCITY_DAILY_LIMIT=20
FAILED_TXN_7D_LIMIT=3
YOUNG_ACCOUNT_DAYS_RISKY=30
YOUNG_ACCOUNT_DAYS_CRIT=7
W_HIGH_AMOUNT=0.15
W_HIGH_RATIO=0.20
W_NIGHT=0.05
W_VELOCITY=0.10
W_RECENT_FAIL=0.10
W_UNVERIFIED_KYC=0.20
W_YOUNG_ACCOUNT=0.12
RULES_CAP=0.5

########################################
# Security
########################################
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_HSTS_SECONDS=0

########################################
# n8n (optional) if you want your own n8n instance
########################################
N8N_WEBHOOK_URL=
N8N_WEBHOOK_TOKEN=optional
